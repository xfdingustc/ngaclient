<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUserAvatar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_person_outline_white_48dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/tvClickAvatar2Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/civUserAvatar"
        android:layout_alignStart="@+id/civUserAvatar"
        android:layout_below="@id/civUserAvatar"
        android:layout_marginTop="16dp"
        android:text="@string/click_avatar_to_login"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/civUserAvatar"
        android:layout_alignStart="@+id/civUserAvatar"
        android:layout_marginTop="16dp"
        android:layout_below="@id/civUserAvatar"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>


</RelativeLayout>